@using Entity.Concrete
@model List<Message2>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12 animated fadeInRight">
            <div class="mail-box-header">
                <h2>
                    Gelen Kutusu (@ViewBag.MessageCount)
                </h2>
            </div>
            <div class="mail-box">
                <table class="table table-hover table-mail">
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="read">
                                <td class="mail-ontact">@item.ReceiverUser.Name</td>
                                <td class="mail-subject"><a href="mail_detail.html">@item.Detail</a></td>
                                <td class="text-right mail-date">@item.CreatedDate.ToString("dd MMMM yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>