@using Entity.Concrete
@using X.PagedList
@using X.PagedList.Mvc.Core;
@model IPagedList<Category>
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>@ViewData["Title"]</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-wrench"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Adı</th>
                            <th>Kayıt Tarihi</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.CreatedDate.ToString("dd MMMM yyyy")</td>
                                <td><a href="/Admin/Category/Delete/@item.Id" onclick="return confirm('Silmek istediğinize emin misiniz?')" class="btn btn-white btn-sm">Sil</a></td>
                                <td><a href="" class="btn btn-primary btn-sm">Düzenle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
<a href="/Admin/Category/Add" class="btn btn-primary btn-sm">Yeni Kategori Ekle</a>
<br /><br />
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))