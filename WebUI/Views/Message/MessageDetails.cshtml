@using Entity.Concrete
@model Message2
@{
    ViewData["Title"] = "Mesaj Detay";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="page-header">
    <h3 class="page-title">@ViewData["Title"]</h3>
</div>
<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <p class="text-primary">#@Model.Id</p>
                        <p class="text-success">@Model.Subject</p>
                        <p class="text-info">@Model.Detail</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<a href="/Message/List" class="btn btn-primary btn-fw">Geri Dön</a>
