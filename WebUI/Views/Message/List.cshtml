@using Entity.Concrete
@model List<Message2>
@{
    ViewData["Title"] = "Gelen Kutusu";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="page-header">
    <h3 class="page-title">@ViewData["Title"]</h3>
</div>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Konu</th>
                            <th>Gönderen</th>
                            <th>Mesaj Tarihi</th>
                            <th>Durum</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Subject</td>
                            <td>@item.SenderUser.Name</td>
                            <td>@item.CreatedDate.ToString("dd MMMM yyyy")</td>
                            <td>
                                @if (item.Status)
                                {
                                    <span class="badge badge-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Pasif</span>
                                }
                            </td>
                            <td><a href="/Message/MessageDetails/@item.Id" class="btn btn-warning btn-fw">Detay</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<a href="/Blog/Add" class="btn btn-primary btn-fw">Yeni Mesaj</a>
