@using Entity.Concrete
@model Message2
@{
    ViewData["Title"] = "Mesaj Gönderme";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="page-header">
    <h3 class="page-title">Yeni Mesaj</h3>
</div>
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("SendMessage", "Message", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.Label("Alıcı")
                        @Html.TextBoxFor(x => x.ReceiverID, new { placeholder = "Alıcı e-posta adresi", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Konu")
                        @Html.TextBoxFor(x => x.Subject, new { placeholder = "Konu", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Mesaj İçeriği")
                        @Html.TextAreaFor(x => x.Detail, 15, 3, new { placeholder = "Mesaj İçeriği", @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Ekle</button>
                }
            </div>
        </div>
    </div>
</div>