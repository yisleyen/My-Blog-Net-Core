@model IEnumerable<Entity.Concrete.Comment>
<div class="comment-top">
    <h4>Yorumlar</h4>
    @foreach (var item in Model)
    {
        <div class="media">
            <img src="~/_theme/images/t1.jpg" alt="" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@item.UserName</h5>
                <p>
                    @item.Content
                </p>
            </div>
        </div>
    }
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        @ViewBag.Message
    }
</div>