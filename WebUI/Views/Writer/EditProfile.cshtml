@model UserUpdateViewModel
@{
    ViewData["Title"] = "EditProfile";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="page-header">
    <h3 class="page-title">Profil Bilgileri</h3>
</div>
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form method="post" action="/Writer/EditProfile/">
                    <div class="form-group">
                        @Html.Label("Adınız")
                        <input type="text" name="UserName" value="@Model.UserName" class="form-control" />
                    </div>
                    <div class="form-group">
                        @Html.Label("Adınız Soyadınız")
                        <input type="text" name="NameSurname" value="@Model.NameSurname" class="form-control" />
                    </div>
                    <div class="form-group">
                        @Html.Label("E-Posta Adresiniz")
                        <input type="email" name="Email" value="@Model.Email" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>